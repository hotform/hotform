{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES5"
  },
  "files": [ "src/index.ts" ]
}
